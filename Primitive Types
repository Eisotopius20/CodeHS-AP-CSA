{
    public static void main(String[] args)
    {
        double height = .5 * 9.8 * 10 * 10;
        double velocity = 9.8 * 10;
        
        System.out.print("height is ");
        System.out.println(height);
        System.out.print("velocity is ");
        System.out.println(velocity);
    }
}


1.5.5: Work Shift
public class WorkShift
{
    public static void main(String[] args)
    {
        int hours = 20;
        int minutes = 42;
        int seconds = 16;
        
        hours *=60;
        hours *=60;
        
        minutes *=60;
        
        seconds += hours + minutes;
        
        System.out.print(seconds);
        System.out.print(" seconds");
    }
}

1.5.6: My Age
public class MyAge
{
    public static void main(String[] args)
    {
        int age = 14;
        
        System.out.print("My current age is: ");
        System.out.println(age);
        age++;
        System.out.print("My age next year will be: ");
        System.out.println(age);
        age--;
        System.out.print("My current age is: ");
        System.out.println(age);
    }
}


1.6.4: My Age (User Input)
import java.util.Scanner;

public class MyAge
{
    public static void main(String args[]) 
    {
        int age;
        Scanner input= new Scanner(System.in);
        System.out.print("Input age: ");
        age = input.nextInt();
        System.out.print("My current age: ");
        System.out.println(age);
        age++;
        System.out.print("My age next year will be: ");
        System.out.println(age);
        age--;
        System.out.print("My current age is: ");
        System.out.println(age);
    }
}

1.6.5: Night Out
import java.util.*;

public class NightOut
{
   public static void main(String[] args)
   {
       Scanner input = new Scanner(System.in);
       double dinnercost;
       double minigolfcost;
       double dessertcost;
       
       System.out.println("How much did dinner cost?");
       dinnercost = input.nextDouble();
       System.out.println("How much is mini-golf for one person");
       minigolfcost = input.nextDouble();
       System.out.println("How much did dessert cost");
       dessertcost = input.nextDouble();
       System.out.print("Dinner: ");
       System.out.println(dinnercost);
       System.out.print("Mini-Golf: ");
       System.out.println(minigolfcost);
       System.out.print("Dessert: ");
       System.out.println(dessertcost);
       minigolfcost *= 2;
       double grandtotal = dinnercost + minigolfcost + dessertcost;
       System.out.print("Grand Total: ");
       System.out.println(grandtotal);

   }
}

1.6.6: MLA Citation
import java.util.Scanner;

public class Citation
{
   public static void main(String[] args)
   {
       Scanner input = new Scanner(System.in);
       
       String Authorname;
       String Booktitle;
       String Publisher;
       int Year;
       
       System.out.println("Enter the author's name as 'Last name, First name': ");
       Authorname = input.nextLine();
       System.out.println("Enter the title of the book: ");
       Booktitle = input.nextLine();
       System.out.println("Enter the publisher of the book: ");
       Publisher = input.nextLine();
       System.out.println("Enter the year the book was published: ");
       Year = input.nextInt();
       
       System.out.print(Authorname);
       System.out.print(". ");
       System.out.print(Booktitle);
       System.out.println(".");
       System.out.print(Publisher);
       System.out.print(", ");
       System.out.print(Year);
       System.out.println(".");
       
       
   }
}


1.7.4: Casting to an Int
import java.util.Scanner;

public class CastingToInt
{
   public static void main(String[] args)
   {
       
       Scanner input = new Scanner(System.in);
       
       double myDouble;
       int newDouble;
       
       System.out.println("Type a decimal number: ");
       myDouble = input.nextDouble();
       newDouble = (int) myDouble;
       System.out.println(newDouble);
   }
}

1.7.5: Casting to a Double
import java.util.Scanner;

public class CastingToDouble
{
   public static void main(String[] args)
   {
       Scanner input = new Scanner(System.in);
       
       int firstInt;
       int secondInt;
       double solution;

       System.out.print("First int: ");
       firstInt = input.nextInt();
       System.out.print("Second int: ");
       secondInt = input.nextInt();
       solution = firstInt / (double) secondInt;
       System.out.print(solution);

   }
}

1.7.8: Movie Ratings
import java.util.Scanner;

public class MovieRatings
{
   public static void main(String[] args)
   {
       Scanner input = new Scanner(System.in);
       
       double movieRating;
       int movieRatingRounded;

       System.out.println("Enter movie rating (as a decimal)");
       movieRating = input.nextDouble();
       movieRating += 0.5;
       movieRatingRounded = (int) movieRating;
       System.out.print("Rating rounded: ");
       System.out.print(movieRatingRounded);
       
   }
}

1.7.11: Integer Overflow
public class IntegerOverflow
{
   public static void main(String[] args)
   {
       System.out.println(Integer.MIN_VALUE);
       System.out.println(Integer.MAX_VALUE);
       System.out.println(Integer.MIN_VALUE - 1);
       System.out.println(Integer.MAX_VALUE + 1);
       /* The program prints the values anyway even though they are
       above/below the max/min values */
       //It prints 2147483647 and -2147483648 I guess its suporising 
       //because when you subtract one from the min it becomes the max
   }
}
